<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/level_chooser_first_choice"
        android:text="@string/level_chooser_first_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/level_chooser_second_choice"
        android:text="@string/level_chooser_second_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/level_chooser_third_choice"
        android:text="@string/level_chooser_third_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/level_chooser_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/welcome_next"
        android:text="TEMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>